# Copy to .env and fill in real values. Do not commit .env.

# Environment: dev | prod
APP_ENV=dev

# Enable debug (e.g. verbose errors). Use false in production.
DEBUG=false

# API URL prefix for v1 routes
API_V1_PREFIX=/api/v1

# PostgreSQL connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/helion

# Ollama (local LLM for reasoning). Llama 3 is provided by a local Ollama instance.
# Install Ollama from https://ollama.com and run: ollama pull llama3.2
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_REQUEST_TIMEOUT_SEC=120
# Optional: deterministic generation (defaults below give reproducible outputs)
# OLLAMA_TEMPERATURE=0.0
# OLLAMA_TOP_P=1.0
# OLLAMA_REPEAT_PENALTY=1.0
# OLLAMA_SEED=42

# Jira Cloud (optional; required only for one-click export POST /api/v1/jira/export)
# Create an API token at https://id.atlassian.com/manage/api-tokens
# JIRA_BASE_URL=https://your-domain.atlassian.net
# JIRA_EMAIL=your-email@example.com
# JIRA_API_TOKEN=your-api-token
# JIRA_PROJECT_KEY=HELION
# For classic/company-managed projects: Epic Link field ID (e.g. customfield_10014). Find in Jira: Settings → Issues → Custom fields.
# JIRA_EPIC_LINK_FIELD_ID=
# JIRA_ISSUE_TYPE=Task
# JIRA_EPIC_ISSUE_TYPE=Epic
# JIRA_REQUEST_TIMEOUT_SEC=30

# Data retention: delete findings older than RETENTION_HOURS (run via cron or python -m app.retention)
RETENTION_ENABLED=true
RETENTION_HOURS=48

# JWT authentication (required). Use a long random secret in production.
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=change-me-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
# Set to true in production. When false, API accepts unauthenticated requests (synthetic user).
AUTH_ENABLED=false

