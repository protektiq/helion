# Copy to .env and fill in real values. Do not commit .env.

# Environment: dev | prod
APP_ENV=dev

# Enable debug (e.g. verbose errors). Use false in production.
DEBUG=false

# API URL prefix for v1 routes
API_V1_PREFIX=/api/v1

# PostgreSQL connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/helion

# Ollama (local LLM for reasoning). Llama 3 is provided by a local Ollama instance.
# Install Ollama from https://ollama.com and run: ollama pull llama3.2
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_REQUEST_TIMEOUT_SEC=120
